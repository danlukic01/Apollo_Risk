@page "/manageservices"
@inject IRiskService RiskService

<PageTitle>Manage Services - Apollo Risk</PageTitle>

<div class="settings-page">
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">
                <RadzenIcon Icon="business_center" />
            </div>
            <div>
                <h1>Manage Services</h1>
                <p>Configure risk assessment services</p>
            </div>
        </div>
        <div class="header-actions">
            <RadzenButton Icon="add" Text="Add Service" ButtonStyle="ButtonStyle.Primary" Click="@ShowAddDialog" />
        </div>
    </div>

    <!-- Services Grid -->
    <div class="data-card">
        @if (isLoading)
        {
            <div class="loading-container">
                <RadzenProgressBarCircular ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
                <span>Loading services...</span>
            </div>
        }
        else
        {
            <RadzenDataGrid @ref="servicesGrid"
                            Data="@services"
                            TItem="ServiceDto"
                            AllowFiltering="true"
                            AllowSorting="true"
                            AllowPaging="true"
                            PageSize="15"
                            PagerHorizontalAlign="HorizontalAlign.Center"
                            ShowPagingSummary="true"
                            Class="risk-data-grid">
                <Columns>
                    <RadzenDataGridColumn TItem="ServiceDto" Property="Id" Title="ID" Width="80px" TextAlign="TextAlign.Center" />
                    <RadzenDataGridColumn TItem="ServiceDto" Property="Name" Title="Service Name" />
                    <RadzenDataGridColumn TItem="ServiceDto" Title="Risk Categories" Width="280px" TextAlign="TextAlign.Center">
                        <Template Context="item">
                            <span class="count-badge">@(GetCategoryCount(item.Id)) categories</span>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="ServiceDto" Title="Actions" Width="120px" TextAlign="TextAlign.Center" Sortable="false" Filterable="false">
                        <Template Context="item">
                            <div class="action-buttons">
                                <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Size="ButtonSize.Small" Click="@(() => ShowEditDialog(item))" title="Edit" />
                                <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Small" Click="@(() => ConfirmDelete(item))" title="Delete" />
                            </div>
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
            </RadzenDataGrid>
        }
    </div>

    <!-- Help Section -->
    <DynamicHelpSection PageKey="ManageServices" />

    <!-- Add/Edit Dialog -->
    @if (showDialog)
    {
        <div class="modal-overlay" @onclick="CloseDialog">
            <div class="modal-dialog small" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>@(isEditing ? "Edit Service" : "Add Service")</h3>
                    <button class="modal-close" @onclick="CloseDialog">
                        <RadzenIcon Icon="close" />
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Service Name *</label>
                        <RadzenTextBox @bind-Value="@currentService.Name"
                                       Placeholder="Enter service name"
                                       Style="width: 100%;" />
                    </div>
                </div>
                <div class="modal-footer">
                    <RadzenButton Text="Cancel" ButtonStyle="ButtonStyle.Light" Click="@CloseDialog" />
                    <RadzenButton Text="@(isEditing ? "Update" : "Create")" ButtonStyle="ButtonStyle.Primary" Click="@SaveService" />
                </div>
            </div>
        </div>
    }

    <!-- Delete Confirmation -->
    @if (showDeleteConfirm)
    {
        <div class="modal-overlay" @onclick="CloseDeleteConfirm">
            <div class="modal-dialog small" @onclick:stopPropagation="true">
                <div class="modal-header danger">
                    <h3>Delete Service</h3>
                    <button class="modal-close" @onclick="CloseDeleteConfirm">
                        <RadzenIcon Icon="close" />
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this service?</p>
                    <p class="delete-details"><strong>@serviceToDelete?.Name</strong></p>
                    <p class="warning-text">This may affect associated risk categories and risks.</p>
                </div>
                <div class="modal-footer">
                    <RadzenButton Text="Cancel" ButtonStyle="ButtonStyle.Light" Click="@CloseDeleteConfirm" />
                    <RadzenButton Text="Delete" ButtonStyle="ButtonStyle.Danger" Click="@DeleteService" />
                </div>
            </div>
        </div>
    }
</div>

