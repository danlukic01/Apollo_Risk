@code {
    private RadzenDataGrid<ServiceDto>? servicesGrid;
    private List<ServiceDto> services = new();
    private Dictionary<int, int> categoryCounts = new();

    private bool isLoading = true;
    private bool showDialog = false;
    private bool isEditing = false;
    private bool showDeleteConfirm = false;

    private ServiceDto currentService = new();
    private ServiceDto? serviceToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            services = await RiskService.GetServicesAsync() ?? new();
            // Load category counts
            var categories = await RiskService.GetCategoriesAsync() ?? new();
            categoryCounts = categories.GroupBy(c => c.ServiceId).ToDictionary(g => g.Key, g => g.Count());
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading services: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private int GetCategoryCount(int serviceId) => categoryCounts.GetValueOrDefault(serviceId, 0);

    private void ShowAddDialog()
    {
        currentService = new ServiceDto();
        isEditing = false;
        showDialog = true;
    }

    private void ShowEditDialog(ServiceDto service)
    {
        currentService = new ServiceDto { Id = service.Id, Name = service.Name };
        isEditing = true;
        showDialog = true;
    }

    private void CloseDialog()
    {
        showDialog = false;
        currentService = new();
    }

    private async Task SaveService()
    {
        if (string.IsNullOrWhiteSpace(currentService.Name)) return;

        try
        {
            if (isEditing)
                await RiskService.UpdateServiceAsync(currentService);
            else
                await RiskService.CreateServiceAsync(currentService);

            CloseDialog();
            await LoadData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving service: {ex.Message}");
        }
    }

    private void ConfirmDelete(ServiceDto service)
    {
        serviceToDelete = service;
        showDeleteConfirm = true;
    }

    private void CloseDeleteConfirm()
    {
        showDeleteConfirm = false;
        serviceToDelete = null;
    }

    private async Task DeleteService()
    {
        if (serviceToDelete != null)
        {
            try
            {
                await RiskService.DeleteServiceAsync(serviceToDelete.Id);
                CloseDeleteConfirm();
                await LoadData();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting service: {ex.Message}");
            }
        }
    }
}
