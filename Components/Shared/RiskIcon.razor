@* RiskIcon.razor - Custom Risk Diamond Icon Component *@

<svg xmlns="http://www.w3.org/2000/svg"
     viewBox="0 0 24 24"
     width="@Size"
     height="@Size"
     class="risk-icon @Class"
     style="@Style">
    <!-- Four diamond shapes touching in 2x2 grid -->
    <!-- Top Left Diamond -->
    <path d="M6 0 L12 6 L6 12 L0 6 Z" fill="@Color" />
    <!-- Top Right Diamond -->
    <path d="M18 0 L24 6 L18 12 L12 6 Z" fill="@Color" />
    <!-- Bottom Left Diamond -->
    <path d="M6 12 L12 18 L6 24 L0 18 Z" fill="@Color" />
    <!-- Bottom Right Diamond -->
    <path d="M18 12 L24 18 L18 24 L12 18 Z" fill="@Color" />
</svg>

@code {
    [Parameter] public string Size { get; set; } = "24px";
    [Parameter] public string Color { get; set; } = "#F59E0B";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string Style { get; set; } = "";
}
