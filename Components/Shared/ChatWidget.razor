    private string FormatTables(string content)
    {
        // Match markdown tables
        var tableRegex = new System.Text.RegularExpressions.Regex(
            @"(\|.+\|[\r\n]+\|[-:\|\s]+\|[\r\n]+(?:\|.+\|[\r\n]*)+)",
            System.Text.RegularExpressions.RegexOptions.Multiline);

        return tableRegex.Replace(content, match =>
        {
            var lines = match.Value.Split('\n', StringSplitOptions.RemoveEmptyEntries);
            if (lines.Length < 2) return match.Value;

            var sb = new System.Text.StringBuilder();
            sb.Append("<table class=\"chat-table\">");

            for (int i = 0; i < lines.Length; i++)
            {
                var line = lines[i].Trim();
                if (line.StartsWith("|") && line.EndsWith("|"))
                {
                    // Skip separator line
                    if (line.Contains("---") || line.Contains(":-")) continue;

                    var cells = line.Split('|', StringSplitOptions.RemoveEmptyEntries);
                    var tag = i == 0 ? "th" : "td";
                    sb.Append("<tr>");
                    foreach (var cell in cells)
                    {
                        sb.Append($"<{tag}>{cell.Trim()}</{tag}>");
                    }
                    sb.Append("</tr>");
                }
            }

            sb.Append("</table>");
            return sb.ToString();
        });
