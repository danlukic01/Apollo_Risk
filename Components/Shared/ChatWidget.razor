        var chartRegex = new System.Text.RegularExpressions.Regex(
            @"---CHART:(\w+)---\s*(\{[\s\S]*?\})\s*---END_CHART---",
            System.Text.RegularExpressions.RegexOptions.IgnoreCase);

        var matches = chartRegex.Matches(content);
        foreach (System.Text.RegularExpressions.Match match in matches)
        {
            _chartCounter++;
            var chartId = $"chat-chart-{_chartCounter}";
            var chartType = match.Groups[1].Value.ToLower();
            var chartJson = match.Groups[2].Value;

            charts.Add(new ChartData
            {
                Id = chartId,
                Type = chartType,
                JsonData = chartJson
            });

            // Replace chart block with a canvas placeholder
            cleanContent = cleanContent.Replace(match.Value, 
                $"<div class=\"chart-container\"><canvas id=\"{chartId}\"></canvas></div>");
        }

        return (cleanContent, charts);
    }

