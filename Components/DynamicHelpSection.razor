    {
        if (!string.IsNullOrEmpty(PageKey))
        {
            helpSection = await RiskService.GetHelpSectionByPageKeyAsync(PageKey);
        }
        isLoading = false;
    }

    private string FormatThresholdRange(decimal? min, decimal? max)
    {
        if (!min.HasValue || !max.HasValue) return "";

        var suffix = ShowPercentage ? "%" : "";

        var minStr = min.Value % 1 == 0 ? min.Value.ToString("0") : min.Value.ToString("0.##");
        var maxStr = max.Value % 1 == 0 ? max.Value.ToString("0") : max.Value.ToString("0.##");

        if (min == 0)
            return $"<{maxStr}{suffix}";
        if (max >= 100)
            return $"≥{minStr}{suffix}";
        return $"{minStr}–{maxStr}{suffix}";
    }

