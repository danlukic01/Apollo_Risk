@* 
    DynamicHelpSection.razor
    A reusable component that renders help content from the database
    Usage: <DynamicHelpSection PageKey="TurnaroundRisk" />
*@

@inject IRiskService RiskService

@if (isLoading)
{
    <div class="help-loading">
        <RadzenProgressBarCircular ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
    </div>
}
else if (helpSection != null && helpSection.Items.Any())
{
    <div class="card help-card">
        <div class="card-header">
            <h3 class="card-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 0.5rem; vertical-align: middle; color: #64748b;">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 17h-2v-2h2v2zm2.07-7.75l-.9.92C13.45 12.9 13 13.5 13 15h-2v-.5c0-1.1.45-2.1 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41 0-1.1-.9-2-2-2s-2 .9-2 2H8c0-2.21 1.79-4 4-4s4 1.79 4 4c0 .88-.36 1.68-.93 2.25z" />
                </svg>
                @(helpSection.SectionTitle ?? "Help & Guidance")
            </h3>
        </div>

        @{
            var infoCards = helpSection.Items.Where(i => i.ItemType == "info_card" || i.ItemType == "definition").OrderBy(i => i.DisplayOrder).ToList();
            var thresholds = helpSection.Items.Where(i => i.ItemType == "threshold").OrderBy(i => i.DisplayOrder).ToList();
        }

        @* Info Cards Grid *@
        @if (infoCards.Any())
        {
            <div class="help-card-grid">
                @foreach (var item in infoCards)
                {
                    <div class="help-card-item">
                        <div class="card-icon @item.ColorClass">
                            @RenderIcon(item.IconName)
                        </div>
                        <h4>@item.Title</h4>
                        <p>@item.Description</p>
                        @if (item.Tags != null && item.Tags.Any())
                        {
                            <div class="help-tags">
                                @foreach (var tag in item.Tags.OrderBy(t => t.DisplayOrder))
                                {
                                    <span class="help-tag @GetTagColorClass(tag.TagType)">@tag.TagText</span>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        }

        @* Thresholds Section *@
        @if (thresholds.Any())
        {
            <div class="help-thresholds">
                <h4>@(ThresholdTitle ?? "Thresholds")</h4>
                <div class="dynamic-threshold-grid">
                    @foreach (var item in thresholds)
                    {
                        <div class="dynamic-threshold-item @item.ColorClass">
                            <span class="threshold-range">
                                @FormatThresholdRange(item.MinValue, item.MaxValue)
                            </span>
                            <span class="threshold-label">@item.Title</span>
                            <span class="threshold-desc">@item.Description</span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

